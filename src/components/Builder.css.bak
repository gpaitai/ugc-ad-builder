.builder-section {
    padding: 6rem 0;
    position: relative;
    background-color: var(--color-bg-page);
    /* Use variable instead of #fafafa */
}

.builder-bg-accent {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 50%;
    /* Subtle gradient accent, adjusted to be compatible with both modes */
    background: linear-gradient(180deg, rgba(139, 92, 246, 0.03) 0%, transparent 100%);
    pointer-events: none;
}

.builder-card {
    background: var(--color-bg-card);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-xl);
    padding: 3rem;
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
    border: 1px solid var(--color-border);
}

.builder-header {
    margin-bottom: 3rem;
}

.builder-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--color-text-main);
}

.builder-subtitle {
    color: var(--color-text-sub);
    font-size: 1.1rem;
}

.form-layout {
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 3rem;
}

/* Upload Column */
.upload-column {
    display: flex;
    flex-direction: column;
}

.upload-zone {
    flex: 1;
    min-height: 400px;
    border: 2px dashed #d1d5db;
    border-radius: var(--radius-lg);
    display: flex;
    /* Ensures centering */
    align-items: center;
    /* Vertical center */
    justify-content: center;
    /* Horizontal center */
    cursor: pointer;
    transition: all 0.2s ease;
    background: var(--color-bg-input);
    /* Updated to variable */
    position: relative;
    overflow: hidden;
}

.upload-zone:hover {
    border-color: var(--color-primary);
    background: var(--color-bg-input);
    /* Keep consistent or add slight tint */
    opacity: 0.9;
}

.upload-zone.has-file {
    border-style: solid;
    padding: 0;
}

.upload-placeholder {
    text-align: center;
    padding: 2rem;
}

/* .upload-icon is defined below, so we don't duplicate it here */

.upload-text {
    font-weight: 500;
    color: var(--color-text-main);
    margin-bottom: 0.5rem;
}

.upload-subtext {
    font-size: 0.875rem;
    color: var(--color-text-sub);
}

.upload-preview {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-fit: cover;
}

input[type="text"],
input[type="email"],
textarea,
select {
    padding: 0.75rem 1rem;
    /* Revert to generous padding */
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    background-color: var(--color-bg-input);
    /* Updated to variable */
    color: var(--color-text-main);
    /* Ensure text color is correct */
    transition: border-color 0.2s;
    width: 100%;
}

.upload-icon {
    font-size: 3rem;
    /* Revert to large icon */
    margin-bottom: 1rem;
    color: var(--color-text-sub);
}

input:focus,
textarea:focus,
select:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

textarea {
    resize: vertical;
}

.form-checkbox {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.5rem;
}

.form-checkbox input {
    width: 1.25rem;
    height: 1.25rem;
    cursor: pointer;
}

.form-checkbox label {
    font-weight: 400;
    color: var(--color-text-sub);
    cursor: pointer;
}

.submit-btn {
    margin-top: 1rem;
    padding: 1rem;
    background-color: var(--color-primary);
    color: white;
    border-radius: var(--radius-md);
    font-size: 1.125rem;
    font-weight: 600;
    transition: all 0.2s;
}

.submit-btn:hover {
    background-color: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
}

.submit-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
}

@media (max-width: 768px) {
    .form-layout {
        grid-template-columns: 1fr;
    }

    .upload-zone {
        min-height: 250px;
    }

    .builder-card {
        padding: 1.5rem;
    }

    .builder-title {
        font-size: 1.75rem;
    }
}